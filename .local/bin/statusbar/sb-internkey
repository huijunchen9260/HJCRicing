# show âš”ï¸  if internal keyboard is disabled.

case $BLOCK_BUTTON in
    1) internalkeytoggle; pkill -RTMIN+15 dwmblocks ;;
    3) notify-send "ğŸ’» enable internal keyboard
âŒ disable internal keyboard"
    ;;
